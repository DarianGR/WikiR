@page
@model WikiC.Pages.Tags.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Details Tag</h1>
</div>

<div class="cont">
    <div class="card">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <h5 class="card-subtitle mb-2 text-center">@Html.DisplayNameFor(model => model.Tag.NombreTag)</h5>
                <h7 class="text-center">@Html.DisplayFor(model => model.Tag.NombreTag)</h7>
            </li>
        </ul>
    </div>
    <br>
    </br>
</div>

<div class="center">
    <a asp-page="./Edit" asp-route-id="@Model.Tag?.Id" class="btn">Edit</a>
    <a asp-page="./Index" class="btn">Back to List</a>
</div>

<style type="text/css">
    body {
        color: #f5f5f5;
        background: radial-gradient(circle, rgba(199,199,199,1) 0%, rgba(90,89,89,1) 45%, rgba(0,0,0,1) 100%);
        font-family: fantasy;
    }
    h1 {
        text-shadow: black 0.1em 0.1em 0.2em;
    }
    h5{
        background: #303030;
        color: #f5f5f5;
        font-size: 100%;
    }
    h7 {
        font: condensed 110% sans-serif;
    }
    .cont{
        display: flex;
        justify-content: center;
        flex-direction: row;
    }
    .btn {
        margin-top: 70px;
        margin-left: 25px;
        margin-right: 25px;
        background-image: -webkit-linear-gradient(top, #191919, #f5f5f5);
        border-radius: 5px;
        text-shadow: 0 0 0.1em #bababa;
    }
    .btn:hover {
        background-image: -webkit-linear-gradient(top, #f5f5f5, #191919);
    }
    .card{
        width: 33%;
        margin-top: 15px;
    }
    .center{
        text-align: center;
    }
</style>