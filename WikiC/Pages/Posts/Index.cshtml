@page
@model WikiC.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="text-center">
    <h1>Post</h1>
</div>

<p>
    <a asp-page="Create" class="btn">Create New</a>
</p>
<table class="table">

    <tbody>
        <div class="row">
            @foreach (var item in Model.Post)
            {

                <div class="col-sm-3">
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item1">
                                <div class="row">
                                    <h6 class="card-subtitle mb-2 text-center">@Html.DisplayFor(modelItem => item.Titulo)</h6>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <h6 class="card-subtitle mb-2">@Html.DisplayNameFor(model => model.Post[0].Fecha)</h6>
                                <h7>@Html.DisplayFor(modelItem => item.Fecha)</h7>
                            </li>
                            <li class="list-group-item">
                                <h6 class="card-subtitle mb-2">@Html.DisplayNameFor(model => model.Post[0].CategoriaId)</h6>
                                <h7>@Html.DisplayFor(modelItem => item.Categoria.NombreCat)</h7>
                            </li>
                            <li class="list-group-item">
                                <h6 class="card-subtitle mb-2">@Html.DisplayNameFor(model => model.Post[0].Tags)</h6>
                                <h7>@Html.DisplayFor(modelItem => item.Tags.NombreTag)</h7>
                            </li>
                            <li class="list-group-item2 card-subtitle text-center">
                                <h7>
                                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                </h7>
                            </li>

                        </ul>
                    </div>
                    <br>

                    </br>
                </div>
            }
        </div>
    </tbody>
</table>

<style type="text/css">
    body {
        color: #f5f5f5;
        background: radial-gradient(circle, rgba(199,199,199,1) 0%, rgba(90,89,89,1) 45%, rgba(0,0,0,1) 100%);
        font-family: fantasy;
    }
    h1 {
        text-shadow: black 0.1em 0.1em 0.2em;
    }
    h7 {
        font: condensed 100% sans-serif;
    }
    .card {
        border: #000000 5px solid;
    }
    .list-group-item1 {
        background: #191919;
    }
    .list-group-item {
        background: #bababa;
    }
    a {
        color: #d1d1d1;
    }
    .list-group-item2 {
        background: #303030;
    }
    .btn {
        background-image: -webkit-linear-gradient(top, #191919, #bababa);
        text-shadow: 0 0 0.1em #bababa;
    }
    .btn:hover {
        background-image: -webkit-linear-gradient(top, #bababa, #191919);
    }
</style>






