@page
@model WikiC.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Crear Post</h1>
</div>

<div class="row">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-sm-1"></div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Post.Titulo" class="control-label"></label>
                    <input asp-for="Post.Titulo" class="form-control" />
                    <span asp-validation-for="Post.Titulo" class="text-danger"></span>
                </div>
                <p>
                <div class="form-group">
                    <label asp-for="Post.CategoriaId" class="control-label"></label>
                    <select asp-for="Post.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>
                </p>
                <div class="form-group">
                    <button value="Create" class="btn">Create</button>
                    <a asp-page="Index" class="btn">Back to List</a>
                </div>
            </div>

            <div class="col-sm-2"></div>

            <div class="col-sm-4">
                <div class="form-group">
                    <label asp-for="Post.TagId" class="control-label"></label>
                    <select asp-for="Post.TagId" class="form-control" asp-items="ViewBag.TagId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Post.Fecha" class="control-label"></label>
                    <input asp-for="Post.Fecha" class="form-control" />
                    <span asp-validation-for="Post.Fecha" class="text-danger"></span>
                </div>             
            </div>

            <div class="col-sm-1"></div>
        </div>
    </form>
</div>
<br></br>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

<style type="text/css">
    body {
        color: #f5f5f5;
        background: radial-gradient(circle, rgba(199,199,199,1) 0%, rgba(90,89,89,1) 45%, rgba(0,0,0,1) 100%);
        font-family: fantasy;
    }
    h1 {
        text-shadow: black 0.1em 0.1em 0.2em;
    }
    .btn {
        margin-top: 40px;
        margin-right: 50px;
        background-image: -webkit-linear-gradient(top, #191919, #bababa);
        border-radius: 5px;
        text-shadow: 0 0 0.1em #bababa;
    }
    .btn:hover {
        background-image: -webkit-linear-gradient(top, #bababa, #191919);
    }
    .control-label {
        text-shadow: black 0.1em 0.1em 0.2em;
        font: condensed 120% fantasy;
        color: #bababa;
    }
    .form-control {
        font: condensed 120% sans-serif;
    }
  /*.row {
        border: #000000 2px solid;
    }*/
</style>